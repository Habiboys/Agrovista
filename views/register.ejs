<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AgroWista - Daftar Akun Baru</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script>
      function validatePasswords() {
        const password = document.getElementById("password").value;
        const confirmPassword =
          document.getElementById("confirmPassword").value;
        const submitButton = document.getElementById("submitButton");
        const errorMessage = document.getElementById("errorMessage");

        if (password && confirmPassword) {
          if (password === confirmPassword) {
            errorMessage.textContent = "";
            errorMessage.classList.add("hidden");
            submitButton.disabled = false;
            submitButton.classList.remove("opacity-50", "cursor-not-allowed");
          } else {
            errorMessage.textContent = "Kata sandi tidak cocok!";
            errorMessage.classList.remove("hidden");
            submitButton.disabled = true;
            submitButton.classList.add("opacity-50", "cursor-not-allowed");
          }
        } else {
          errorMessage.classList.add("hidden");
          submitButton.disabled = false;
          submitButton.classList.remove("opacity-50", "cursor-not-allowed");
        }
      }

      function validateAge(input) {
        if (input.value < 0) input.value = 0;
        if (input.value > 120) input.value = 120;
      }
    </script>
  </head>
  <body class="bg-gray-50">
    <!-- Back to Home Button -->
    <a
      href="/"
      class="fixed top-4 left-4 flex items-center text-gray-600 hover:text-green-600 transition-colors"
    >
      <iconify-icon icon="mdi:arrow-left" class="text-2xl mr-2"></iconify-icon>
      <span class="font-medium">Kembali ke Beranda</span>
    </a>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Left Side - Hero Section -->
        <div class="hidden lg:block">
          <div class="relative rounded-xl overflow-hidden h-full">
            <img
              src="https://images.unsplash.com/photo-1523539693385-e5e891eb4465?q=80&w=1889&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
              alt="Pemandangan Pertanian"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0"></div>
            <div
              class="absolute inset-0 flex flex-col items-center justify-center text-white p-8"
            >
              <iconify-icon
                icon="mdi:sprout"
                class="text-6xl mb-4"
              ></iconify-icon>
              <h2 class="text-4xl font-bold mb-4">Leuwimalang</h2>
              <p class="text-xl mb-8">Desa Wisata</p>
              <div class="space-y-4">
                <div class="flex items-center text-lg">
                  <iconify-icon
                    icon="mdi:check-circle"
                    class="text-green-400 mr-3 text-xl"
                  ></iconify-icon>
                  <span>Liburan Asik & Menyenangkan</span>
                </div>
                <div class="flex items-center text-lg">
                  <iconify-icon
                    icon="mdi:check-circle"
                    class="text-green-400 mr-3 text-xl"
                  ></iconify-icon>
                  <span>Penuh Edukasi dan Pengetahuan</span>
                </div>
                <div class="flex items-center text-lg">
                  <iconify-icon
                    icon="mdi:check-circle"
                    class="text-green-400 mr-3 text-xl"
                  ></iconify-icon>
                  <span>Menyatu dengan Budaya & Alam</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Side - Form -->
        <div class="bg-white p-8 rounded-xl shadow-sm">
          <div class="max-w-lg mx-auto">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              Daftar Akun Baru
            </h2>

            <!-- Error Message -->
            <div
              id="errorMessage"
              class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-lg relative text-center mb-6 hidden"
            ></div>

            <!-- Registration Form -->
            <form action="/auth/register" method="POST" class="space-y-6">
              <!-- Account Information -->
              <div class="space-y-6">
                <h3
                  class="text-lg font-semibold text-gray-700 flex items-center"
                >
                  <iconify-icon icon="mdi:account" class="mr-2"></iconify-icon>
                  Informasi Akun
                </h3>

                <div>
                  <label
                    for="email"
                    class="block text-gray-700 font-medium mb-2"
                    >Email</label
                  >
                  <div class="relative">
                    <iconify-icon
                      icon="mdi:email"
                      class="absolute text-gray-500 top-3 left-3"
                    ></iconify-icon>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                      placeholder="masukkan email anda"
                      required
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label
                      for="password"
                      class="block text-gray-700 font-medium mb-2"
                      >Kata Sandi</label
                    >
                    <div class="relative">
                      <iconify-icon
                        icon="mdi:lock"
                        class="absolute text-gray-500 top-3 left-3"
                      ></iconify-icon>
                      <input
                        type="password"
                        id="password"
                        name="password"
                        class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                        placeholder="masukkan kata sandi"
                        required
                        oninput="validatePasswords()"
                      />
                    </div>
                  </div>

                  <div>
                    <label
                      for="confirmPassword"
                      class="block text-gray-700 font-medium mb-2"
                      >Konfirmasi Kata Sandi</label
                    >
                    <div class="relative">
                      <iconify-icon
                        icon="mdi:lock-check"
                        class="absolute text-gray-500 top-3 left-3"
                      ></iconify-icon>
                      <input
                        type="password"
                        id="confirmPassword"
                        name="confirmPassword"
                        class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                        placeholder="ulangi kata sandi"
                        required
                        oninput="validatePasswords()"
                      />
                    </div>
                  </div>
                </div>
              </div>

              <!-- Personal Information -->
              <div class="space-y-6">
                <h3
                  class="text-lg font-semibold text-gray-700 flex items-center pt-4"
                >
                  <iconify-icon
                    icon="mdi:card-account-details"
                    class="mr-2"
                  ></iconify-icon>
                  Informasi Pribadi
                </h3>

                <div>
                  <label for="name" class="block text-gray-700 font-medium mb-2"
                    >Nama Lengkap</label
                  >
                  <div class="relative">
                    <iconify-icon
                      icon="mdi:account"
                      class="absolute text-gray-500 top-3 left-3"
                    ></iconify-icon>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                      placeholder="masukkan nama lengkap"
                      required
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label
                      for="age"
                      class="block text-gray-700 font-medium mb-2"
                      >Umur</label
                    >
                    <div class="relative">
                      <iconify-icon
                        icon="mdi:calendar"
                        class="absolute text-gray-500 top-3 left-3"
                      ></iconify-icon>
                      <input
                        type="number"
                        id="age"
                        name="age"
                        class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                        placeholder="masukkan umur"
                        required
                        min="0"
                        max="120"
                        oninput="validateAge(this)"
                      />
                    </div>
                  </div>

                  <div>
                    <label
                      for="gender"
                      class="block text-gray-700 font-medium mb-2"
                      >Jenis Kelamin</label
                    >
                    <div class="relative">
                      <iconify-icon
                        icon="mdi:gender-male-female"
                        class="absolute text-gray-500 top-3 left-3"
                      ></iconify-icon>
                      <select
                        id="gender"
                        name="gender"
                        class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors appearance-none"
                        required
                      >
                        <option value="">Pilih jenis kelamin</option>
                        <option value="L">Laki-laki</option>
                        <option value="P">Perempuan</option>
                      </select>
                    </div>
                  </div>

                  <div>
                    <label
                      for="occupation"
                      class="block text-gray-700 font-medium mb-2"
                      >Pekerjaan</label
                    >
                    <div class="relative">
                      <iconify-icon
                        icon="mdi:briefcase"
                        class="absolute text-gray-500 top-3 left-3"
                      ></iconify-icon>
                      <input
                        type="text"
                        id="occupation"
                        name="occupation"
                        class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                        placeholder="masukkan pekerjaan"
                      />
                    </div>
                  </div>

                  <div>
                    <label
                      for="origin"
                      class="block text-gray-700 font-medium mb-2"
                      >Asal</label
                    >
                    <div class="relative">
                      <iconify-icon
                        icon="mdi:map-marker"
                        class="absolute text-gray-500 top-3 left-3"
                      ></iconify-icon>
                      <input
                        type="text"
                        id="origin"
                        name="origin"
                        class="w-full pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-500 transition-colors"
                        placeholder="masukkan kota asal"
                      />
                    </div>
                  </div>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="pt-6">
                <button
                  type="submit"
                  id="submitButton"
                  class="w-full bg-green-600 text-white rounded-lg px-4 py-3 font-medium hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors"
                >
                  Daftar Sekarang
                </button>
              </div>
            </form>

            <div class="mt-6 text-center">
              <p class="text-gray-600">
                Sudah Punya Akun?
                <a
                  href="/auth/login"
                  class="text-green-600 font-medium hover:text-green-500"
                >
                  Masuk Sekarang
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
